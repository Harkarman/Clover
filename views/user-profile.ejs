<link rel="stylesheet" href="/css/user-profile.css" />

<div class="container mt-4">
  <div>
    <section class="col-sm-4 pb-2 pt-2">
      <div id="profile-picture" class="ml-auto mr-auto mt-2 mb-2">
        <img src="<%= profile_user.avatar %>" alt="<%= profile_user.name %>" />
      </div>
      <div id="profile-name">
        <h3>
          <%= profile_user.name.charAt(0).toUpperCase() +
          profile_user.name.slice(1) %>
        </h3>
      </div>
      <!-- Update user profile -->
      <div>
        <% if (profile_user.id==user.id){ %>
        <!--* Button to trigger modal -->
        <button
          type="button"
          class="btn btn-info mt-4"
          data-bs-toggle="modal"
          data-bs-target="#updateProfileModal"
          style="width: 35%"
        >
          Update Profile
        </button>
        <!--* Modal content -->
        <div
          class="modal fade"
          id="updateProfileModal"
          tabindex="-1"
          aria-labelledby="updateProfileModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="updateProfileModalLabel">
                  Update your profile
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <!--* Modal form -->
              <form
                action="/users/update/<%= profile_user.id %>"
                method="post"
                enctype="multipart/form-data"
              >
                <div class="modal-body">
                  <div class="form-group">
                    <label for="name">Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="name"
                      name="name"
                      aria-describedby="name"
                      placeholder="Enter new name..."
                      value="<%= profile_user.name %>"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="email">email</label>
                    <input
                      type="email"
                      class="form-control"
                      id="email"
                      name="email"
                      placeholder="Enter new email..."
                      value="<%= profile_user.email %> "
                      required
                    />
                  </div>
                  <div class="form-group mt-4">
                    <label for="avatar">Upload Profile Picture</label>
                    <input
                      type="file"
                      name="avatar"
                      class="form-control-file"
                      id="avatar"
                    />
                  </div>
                </div>
                <div class="modal-footer">
                  <button
                    type="submit"
                    class="btn btn-primary"
                    style="width: 35%"
                    value="Update"
                  >
                    Save changes
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <% } else { %> <% if (locals.is_friend) { %>
        <a
          type="button"
          href="/users/profile/<%=profile_user._id%>/toggle-friend"
          id="add-friend"
          class="btn btn-primary text-white text-nowrap mt-4"
          style="width: 35%"
          >Add Friend</a
        >
        <% } else { %>
        <a
          type="button"
          href="/users/profile/<%=profile_user._id%>/toggle-friend"
          class="btn btn-danger text-white text-nowrap mt-4"
          style="width: 35%"
          >Remove Friend</a
        >
        <% } %> <% } %>
      </div>
    </section>
  </div>
</div>
