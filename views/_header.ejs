<link rel="stylesheet" href="/css/header.css" />

<header id="layout-header">
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a href="/" class="navbar-brand text-light">
        Clover
        <img src="/images/clover.png" alt="" />
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">
          <% if (locals.user) { %>
          <li class="nav-item dropdown">
            <button
              class="btn btn-outline-light dropdown-toggle"
              type="button"
              id="user-menu"
              data-bs-toggle="dropdown"
              aria-expanded="false"
              style="width: 150px"
            >
              <%= user.name%>
            </button>
            <ul class="dropdown-menu" aria-labelledby="user-menu">
              <li>
                <a
                  href="/users/profile/<%=locals.user.id%>"
                  class="dropdown-item"
                  >Profile
                </a>
              </li>
              <li>
                <a href="/users/friend-requests" class="dropdown-item"
                  >Requests
                </a>
              </li>
              <li>
                <a href="/users/friends" class="dropdown-item">Friends</a>
              </li>
            </ul>
          </li>
          <li class="nav-item">
            <a href="/users/sign-out" type="button" class="btn btn-danger">
              Sign Out
            </a>
          </li>
          <% } else { %>
          <li class="nav-item">
            <a href="/users/sign-up" type="button" class="btn btn-secondary">
              Sign Up
            </a>
          </li>
          <li class="nav-item">
            <a href="/users/sign-in" type="button" class="btn btn-primary">
              Sign In
            </a>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
</header>
